<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_green" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_green"
                android:centerColor="@color/darker_green"
                android:endColor="@color/primary_green"
                android:centerY="0.3"
                android:angle="135" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
